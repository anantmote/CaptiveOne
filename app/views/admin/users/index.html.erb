<h1>User List</h1> <br>

<%= link_to 'Add New User', new_admin_user_path, class: "btn btn-info" %>&nbsp;&nbsp;
 <%= link_to 'Dashboard(Home)', admin_path, class: "btn btn-info" %>
 <br><br>  
<% if @user.count == 0 %>
<%= "No record presents" %>
<% else %>
<table border=0 cellspaceing="5" cellpadding="5">
	<tr>
		<td>Name</td>
		<td>Email</td>
		<td>Phone</td>
		<td>State</td>
	</tr>
	<% @user.each do |user| %>
		<tr>
			<td><%= link_to (user.first_name + " " + user.last_name) , [:admin, user] %></td>
			<td><%= user.email  %></td>
			<td><%= user.phone  %></td>
			<td><%= user.state  %></td>
			<td><%= link_to "Edit", edit_admin_user_path(user) %></td>
			<td><%= link_to "delete", [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %>	
			
		</tr>
	<% end %>
</table>
<% end %>	
 <br><br>
 
  
